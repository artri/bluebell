	<!--
		Bean: vldockingPropertyPlaceholderConfigurer Usage: platform required Description: This configures all placeholders
		defined in the application context. Note "null" string is used for null values and system properties override those
		defined in properties files. Note its priority is greater than "defaultPropertyPlaceholderConfigurer" priority.
	-->
	<bean id="vldockingPropertyPlaceholderConfigurer" parent="defaultPropertyPlaceholderConfigurer" p:order="2000">
		<property name="locations">
			<list>
				<value>classpath*:META-INF/spring/vldocking/*.properties</value>
			</list>
		</property>
	</bean>

