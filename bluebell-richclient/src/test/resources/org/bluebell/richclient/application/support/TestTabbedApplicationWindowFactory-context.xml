<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!--
		A page descriptor (1) useful for testing
	-->
	<bean id="pageDescriptor1" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personMasterViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor (2) useful for testing
	-->
	<bean id="pageDescriptor2" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personDetailViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor (3) useful for testing
	-->
	<bean id="pageDescriptor3" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personSearchViewDescriptor</value>
				<value>personDetailViewDescriptor</value>
			</list>
		</property>
	</bean>
</beans>