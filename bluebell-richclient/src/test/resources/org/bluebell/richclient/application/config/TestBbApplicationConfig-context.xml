<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="abstractPPC" abstract="true" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
		p:ignoreUnresolvablePlaceholders="true" p:ignoreResourceNotFound="false" />

	<!--
		PPC's:
		- Highest
		- Intermediate
		- Lowest
		- Intermediate
		- Highest
	-->
	<bean id="highestPrecedencePPC" parent="abstractPPC" p:location="/org/bluebell/richclient/application/config/highest_precedence.properties">
		<property name="order">
			<util:constant static-field="org.bluebell.richclient.application.config.TestBbApplicationConfig.HIGHEST_PRECEDENCE" />
		</property>
	</bean>

	<bean id="intermediatePrecedencePPC" parent="abstractPPC"
		p:location="/org/bluebell/richclient/application/config/intermediate_precedence.properties">
		<property name="order">
			<util:constant static-field="org.bluebell.richclient.application.config.TestBbApplicationConfig.INTERMEDIATE_PRECEDENCE" />
		</property>
	</bean>

	<bean id="lowestPrecedencePPC" parent="abstractPPC" p:location="/org/bluebell/richclient/application/config/lowest_precedence.properties">
		<property name="order">
			<util:constant static-field="org.bluebell.richclient.application.config.TestBbApplicationConfig.LOWEST_PRECEDENCE" />
		</property>
	</bean>

	<bean id="lowestPrecedencePPC2" parent="lowestPrecedencePPC" />
	<bean id="intermediatePrecedencePPC2" parent="intermediatePrecedencePPC" />
	<bean id="highestPrecedencePPC2" parent="highestPrecedencePPC" />

	<!--
		The BBApplicationConfig bean to be tested.
	-->
	<bean id="applicationConfig" class="org.bluebell.richclient.application.config.BbApplicationConfig" />


	<!--
		Beans helpful for testing purposes.
	-->
	<bean id="bean1" class="java.lang.String">
		<constructor-arg value="${bean1}" />
	</bean>
	<bean id="bean1Bis" class="java.lang.String">
		<constructor-arg value="${bean1}" />
	</bean>
	<bean id="bean2" class="java.lang.String">
		<constructor-arg value="${bean2}" />
	</bean>
	<bean id="bean3" class="java.lang.String">
		<constructor-arg value="${bean3}" />
	</bean>

	<!-- This property also works with this technique -->
	<bean id="bean4" class="java.lang.String">
		<constructor-arg value="${bean1}${bean2}" />
	</bean>

	<!-- This property also works with this technique -->
	<bean id="bean5" class="java.lang.String">
		<constructor-arg value="${${a}${b}}" />
	</bean>

</beans>