<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!--
		Resolve global application properties (i.e. ${application.path}). Note EagerPropertyPlaceholderConfigurer is used
		instead of classic PropertyPlaceholderConfigurer.
	-->
	<bean id="systemPropertiesConfigurer" class="org.springframework.beans.factory.config.EagerPropertyPlaceholderConfigurer"
		p:ignoreUnresolvablePlaceholders="true">
		<property name="locations">
			<util:list>
				<value>/org/bluebell/richclient/application/config/application.properties</value>
			</util:list>
		</property>
	</bean>

	<!--
		The common property placeholder configurer. 
	 -->
	<bean id="applicationPropertiesConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
		p:location="${application.path}/module.properties" />

	<!--
		The bean to be tested 
	 -->
	<bean id="logLevel" class="java.lang.String">
		<constructor-arg value="${logLevel}" />
	</bean>

</beans>