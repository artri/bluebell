<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!--
		A page descriptor containing a master view descriptor.
	-->
	<bean id="masterViewPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personMasterViewDescriptor</value>
			</list>
		</property>
	</bean>

	<!--
		A page descriptor containing a detail view descriptor.
	-->
	<bean id="detailViewPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personDetailViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing a search view descriptor.
	-->
	<bean id="searchViewPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personSearchViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing a validation view descriptor.
	-->
	<bean id="validationViewPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>validationViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing a master and a detail view descriptors.
	-->
	<bean id="masterAndDetailViewsPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personMasterViewDescriptor</value>
				<value>personDetailViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing a master and a detail view descriptors (reverse order).
	-->
	<bean id="rMasterAndDetailViewsPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personDetailViewDescriptor</value>
				<value>personMasterViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing a master and a search view descriptors.
	-->
	<bean id="masterAndSearchViewsPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personMasterViewDescriptor</value>
				<value>personSearchViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing a master and a search view descriptors (reverse order).
	-->
	<bean id="rMasterAndSearchViewsPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personSearchViewDescriptor</value>
				<value>personMasterViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing all kind of views.
	-->
	<bean id="fullPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>personMasterViewDescriptor</value>
				<value>personDetailViewDescriptor</value>
				<value>personSearchViewDescriptor</value>
				<value>validationViewDescriptor</value>
			</list>
		</property>
	</bean>
	
	<!--
		A page descriptor containing all kind of views (reverse order).
	-->
	<bean id="rFullPageDescriptor" parent="abstractVlDockingPageDescriptor">
		<property name="viewDescriptors">
			<list>
				<value>validationViewDescriptor</value>
				<value>personSearchViewDescriptor</value>
				<value>personDetailViewDescriptor</value>
				<value>personMasterViewDescriptor</value>				
			</list>
		</property>
	</bean>

</beans>