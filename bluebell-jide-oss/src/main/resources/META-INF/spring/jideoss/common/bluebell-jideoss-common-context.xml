<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!--
		Bean: jidePlaceholderConfigurer Usage: platform required Description: This configures all placeholders defined in the
		application context. Note "null" string is used for null values and system properties override those defined in
		properties files. Note its priority is greater than "defaultPropertyPlaceholderConfigurer" priority.
	-->
	<bean id="jideOssPropertyPlaceholderConfigurer" parent="defaultPropertyPlaceholderConfigurer" p:order="1000">
		<property name="locations">
			<list>
				<value>classpath:/META-INF/spring/jideoss/common/*.properties</value>
			</list>
		</property>
	</bean>

	<!--
		Bean: jideOssImageResourcesFactory Usage: platform required (if you are using the DefaultImageSource, see below) Description:
		This specifies the component that is responsible for providing image resources locations. This factory uses the
		specified properties files to map image resource keys to image locations.
	-->
	<bean id="jideOssImageResourcesFactory" parent="${jideOssImageResourcesFactory.parent}">
		<property name="locations">
			<list merge="true">
				<value>classpath:/org/bluebell/richclient/image/jideoss-images.properties</value>
			</list>
		</property>
	</bean>
</beans>

